generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Achievement {
  id        Int      @id @default(autoincrement())
  name      String
  type      String
  amount    Float
  createdAt DateTime @default(now())
}

model Booking {
  id            Int      @id @default(autoincrement())
  date          String
  time          String
  year          String?
  status        String   @default("Pendiente")
  userId        String
  description   String?  @default("Sin descripci√≥n")
  serviceId     Int
  price         Int
  paymentMethod String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId, serviceId], map: "userId_serviceId")
}

model Course {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  link      String?  @unique
  thumbnail String?
  status    String   @default("Pendiente")
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model HolidayService {
  id    Int    @id @default(autoincrement())
  name  String
  type  String
  price Int    @default(0)
  image String @default("/barber.svg")
}

model Payment {
  id        Int      @id @default(autoincrement())
  amount    Float
  status    String   @default("Pendiente")
  createdAt DateTime @default(now())
  updatedAt DateTime
  userId    String

  @@index([userId], map: "userId")
}

model Service {
  id    Int    @id @default(autoincrement())
  name  String
  type  String
  price Int    @default(0)
  image String @default("/barber.svg")
}

model TgbCoin {
  id        Int      @id @default(autoincrement())
  amount    Float
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model User {
  id          String  @id
  clientId    String?
  name        String
  email       String  @unique
  password    String
  phone       String?
  totalTurnos Int     @default(0)
  totalCoins  Int     @default(0)
}

model Vacations {
  id  Int    @id @default(autoincrement())
  day String
}

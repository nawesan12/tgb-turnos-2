generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model HolidayService {
  id    Int    @id @default(autoincrement())
  name  String
  type  String
  price Int    @default(0)
  image String @default("/barber.svg")
}

model Service {
  id      Int       @id @default(autoincrement())
  name    String
  type    String
  price   Int       @default(0)
  image   String    @default("/barber.svg")
  Booking Booking[]
}

model Vacations {
  id  Int    @id @default(autoincrement())
  day String
}

model Booking {
  id            Int      @id @default(autoincrement())
  date          String
  time          String
  year          String?
  status        String   @default("Pendiente")
  description   String?  @default("Sin descripci√≥n")
  serviceId     Int
  service       Service  @relation(fields: [serviceId], references: [id])
  price         Int
  paymentMethod String   @default("Efectivo")
  clientName    String
  clientEmail   String
  clientPhone   String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
